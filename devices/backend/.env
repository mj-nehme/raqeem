DATABASE_URL=postgresql+asyncpg://monitor:supersecret@127.0.0.1:5432/monitoring_db
# PostgreSQL database
POSTGRES_USER=monitor
POSTGRES_PASSWORD=supersecret
POSTGRES_DB=monitoring_db
POSTGRES_HOST=localhost
POSTGRES_PORT=30432

# Construct DATABASE_URL for SQLAlchemy Async
# Format: postgresql+asyncpg://user:password@host:port/dbname
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# FastAPI server config (for CORS, etc)
FRONTEND_HOST=http://localhost
FRONTEND_PORT=4000

# MinIO storage config
MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
# Set to true if using https
MINIO_SECURE=false

# Security
SECRET_KEY=some-very-secret-string
# Token expiration in minutes (7 days)
ACCESS_TOKEN_EXPIRE_MINUTES=10080
